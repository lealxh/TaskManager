@model IEnumerable<TaskManager.Models.TaskData>
@{
    ViewData["Title"] = "Task Manager";
}
<div class="simulacion">
    
    <h1>Task Manager</h1>
      <a href="#" class="btn btn-primary" data-toggle="modal" onclick="showInPopup('/Tasks/Create','Create Task')">Add New</a>
      <a href="#" class="btn bg-success text-light" data-toggle="modal" onclick="StartAll()">
          Start All</a>
    <div class="simulacion-inner">
       @Html.Partial("TasksPartial",this.Model)
    </div>

     <div class="modal hide" tabindex="-1" role="dialog" id="form-modal">
      <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="$('#form-modal').modal('hide');">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>
</div>
